import java.awt.Color;

public class HelloWorld {
	public static void main(String[] args) {
		GTerm gt = new GTerm (620,500);
		
		gt.setFontSize(25);
		gt.setFontColor(225,0,225);
		gt.setXY(130, 0);
		gt.println("Hey! My name is Daniel.");
		
		gt.setXY(400, 450);
		gt.println("Goodluck!!!");
		
		
		
		
		
		
		gt.setXY(0, 0);
		gt.addImageIcon("Snow.jpg");
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		
		//gt.showHelp();
	}
}
