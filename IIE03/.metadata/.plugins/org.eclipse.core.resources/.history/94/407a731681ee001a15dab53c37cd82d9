import java.awt.Color;

public class HelloWorld {
	public static void main(String[] args) {
		GTerm gt = new GTerm(600, 450);
		gt.setFontSize(25);
		gt.setFontColor(225,0,225);
		gt.setXY(130, 0);
		gt.println("Hey! My name is Daniel.");
		gt.setXY(420, 400);
		gt.println("Goodluck!!!");

		
		gt.setFontColor(50,0,0);
		gt.setFontSize(16);
		gt.setXY(50,45);
		gt.println("This is a picture I took at the snow this season" + "\n" + 
		"I hope to one day get a remote, work from" + "\n" + "home, job in IT."+ "\n" +
	"I wish to learn how to write and understand code," + "\n" + "and possibly get a better "
				+ "understanding of which path" + "\n" + "I would like to take in my IT career");
		
		gt.setXY(0, 450);
		gt.setFontColor(0, 0, 0);
		gt.setFontSize(8);
		gt.println("Nathan is gay");
		gt.setXY(450, 310);
		gt.setFontColor(0, 0, 0);
		gt.println("Enjoy this cute kitty");
		gt.addImageIcon("Cat.jpg");
		
		
		gt.setXY(0, 0);
		gt.addImageIcon("Snow.jpg");

		
	
	
		
		//gt.showHelp();
	}
}
